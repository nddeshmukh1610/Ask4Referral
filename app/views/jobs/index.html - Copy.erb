   <div class="col-fullwidth">
        <div class="whitebox padd-15 clearfix">                    
            <h4 class="acchead">Latests Jobs</h4>
				<div class="job-box">
						<table  width="100%" class="pure pure-table  pure-table-bordered pure-table-hover" id="results">
						<thead>
							<tr>
							<th width="30%">JOB TITLE</th>
							<th width="30%">JOB COMPANY</th>
							<th width="10%">EXPERIENCE</th> 
							<th width="10%">JOB Location</th>
							<th width="10%">JOB POSTED</th>
							<th colspan="3"></th> 
							</tr>
						</thead>
						
						<tbody>
							<% @jobs.each do |job| %>
								<% if job.japproval.name == "Approved" %>
									<% @localminexp = job.minexp %>
									<% @localmaxexp = job.maxexp %>
									<tr>
										<td><%= link_to job.title, job %></td>
										<td><%= job.company %></td>			  
										<td><%= "#{@localminexp} - #{@localmaxexp} Years" %></td>
										<td><%= job.location.name %></td>
										<td><%= job.created_at.strftime("%d- %b- %Y") %></td>
									</tr>
								<% end %>
							<% end %>
						</tbody>
						</table>
				</div>
		</div>

<div class="job-main whitebox">                      
                            <h4 class="acchead">Search Jobs</h4>
                            <form class="form-horizontal" method="post" action="http://www.ask4refferal.com/search.php" onsubmit="return searchValidation();">
                                
								<div class="col-search-left">
                                    <label class="sr-only" for="location">Location</label>
                                    <input type="text" class="form-control" name="location" id="location" placeholder="Search By Bengaluru, Delhi, Pune, Mumbai">                                
                                </div>
								
								<div class="col-search-right">
                                    <label class="sr-only" for="jobtitle">Job Title</label>
                                    <input type="text" class="form-control" name="jobtitle" id="jobtitle" placeholder="Search By Skills, Title, Keywords">
                                </div>
                                
                               
                                <div class="submit-btn" style="margin-top: 25px;">
                                    <input type="submit" class="ui-btn" name="submit" value="Search Jobs">
                                </div>                           
                            </form>
                        </div>
                        
                        <div class="col-fullwidth">
                            <div class="whitebox padd-15 clearfix">                    
                                <h4 class="acchead">Jobs</h4>
                                <div class="job-box">
                                    <table width="100%" class="pure pure-table  pure-table-bordered pure-table-hover" id="results">
                                        <thead>
                                            <tr>
                                                <th width="42%">JOB DESCRIPTION</th>
                                                <th width="18%">COMPANY NAME</th>
												<th width="13%">LOCATION</th>
                                                <th width="13%">EXPERIENCE</th>                                                
                                                <th width="18%">POSTED</th>
                                            </tr>
                                        </thead>
                                        <tbody>
											<% @jobs.each do |job| %>
												<% if job.japproval.name == "Approved" %>
													<% @localminexp = job.minexp %>
													<% @localmaxexp = job.maxexp %>
													<tr>
														<td><%= link_to job.title, job %></td>
														<td><%= job.company %></td>			  
														<td><%= job.location.name %></td>
														<td><%= "#{@localminexp} - #{@localmaxexp} Years" %></td>														
														<td><%= job.created_at.strftime("%d- %b- %Y") %></td>
													</tr>
												<% end %>
											<% end %>
										</tbody>
                                    </table>  
                              <h6 class="general_heading" style="cursor: pointer; cursor: hand; "><div id="pageNavPosition"></div></h6>									
                                </div>                                                    
                            </div>				
                        </div>